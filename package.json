{
  "name": "shopping-cart-api",
  "version": "1.0.0",
  "description": "Shopping Cart API with product management and cart features",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "test": "jest --runInBand --detectOpenHandles",
    "lint": "eslint . --ext .ts",
    "seed-db": "ts-node src/scripts/seed-data.ts",
    "clean-db": "ts-node -e \"require('./src/config/database').connectDB().then(async () => { await require('mongoose').connection.dropDatabase(); console.log('Database cleaned'); process.exit(0); }).catch(err => { console.error(err); process.exit(1); })\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jahongir0727/shopping-cart-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jahongir0727/shopping-cart-api/issues"
  },
  "homepage": "https://github.com/Jahongir0727/shopping-cart-api#readme"
}